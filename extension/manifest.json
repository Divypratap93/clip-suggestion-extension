{
    "manifest_version": 3,
    "name": "Clip Suggestion - YouTube Shorts Ideas",
    "version": "1.0.0",
    "description": "Generate 5 viral clip ideas from any YouTube video with AI-powered analysis",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*",
        "https://clip-suggestion-extension.onrender.com/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}